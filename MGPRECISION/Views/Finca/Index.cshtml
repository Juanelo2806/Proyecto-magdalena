@model IEnumerable<MGPRECISION.Models.Finca>

@{
    ViewData["Title"] = "Lista de fincas Activas";
}

<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>

    <
    <div class="mb-3">
        <a asp-action="Create" class="btn btn-success">
            <i class="fas fa-plus"></i> Nueva Finca
        </a>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-info text-center">
            <div class="py-4">
                <i class="fas fa-database fa-3x mb-3" style="color: #0dcaf0;"></i>
                <h4>No hay fincas registradas</h4>
                <p class="text-muted">No se encontraron fincas en el sistema.</p>
                <p class="text-muted">Puede comenzar agregando una nueva finca.</p>
                <a asp-action="Create" class="btn btn-primary mt-2">
                    <i class="fas fa-plus"></i> Agregar Primera Finca
                </a>
            </div>
        </div>
    }
    else
    {
        
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Código</th>
                        <th>Nombre</th>
                        <th>Estado</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Codigo</td>
                            <td>@item.Nombre</td>
                            <td>@item.Estado</td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">
                                        <i class="fas fa-edit"></i> Editar
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">
                                        <i class="fas fa-eye"></i> Detalles
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                                        <i class="fas fa-trash"></i> Eliminar
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>

        
        <div class="mt-3">
            <span class="text-muted">Total: @Model.Count() fincas registradas</span>
        </div>
    }
</div>